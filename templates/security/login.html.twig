{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Bonjour, {{ app.user.username }}, vous êtes connecté! <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-6 mb-5 mt-5" style="margin:auto; text-align: center;">       
            <h2 class="h3 mb-3 mt-4 font-weight-normal text-center" id="login_title">Mon compte</h2>
                <h5 class="text-center mt-2 mb-4">Vous avez déjà un compte</h5>
        </div>
    </div>
     <div class="row">
        <div class="col-md-6" style="margin:auto">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6" style="margin:auto">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control mb-4" required>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="row">
        <div class="col-md-2 mb-5 text-center" style="margin:auto;">
            <button class="btn btn-md" type="submit" id="login_button">
                Connexion
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-5" style="margin:auto">
            <p class="text-center">Vous n'êtes pas encore inscrit? <a class="join-link from-toggle" href ="{{ path('security_registration') }}"><b>S'inscrire</b></p>
        </div>
    </div>
</form>
{% endblock %}

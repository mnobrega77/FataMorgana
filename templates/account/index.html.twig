{% extends 'base.html.twig' %}


{% block title %}FataMorgana{% endblock %}

{% block body %}
    <h2 class="text-center mt-5 mb-5">Bonjour, {{ app.user.client.prenom }}, bienvenue dans votre espace personnel!</h2>
    <form>
    <div class="form-group">
        <label for="nom">Nom</label>
        <input type="text" class="form-control" name= "nom" placeholder="{{ app.user.client.nom }}">
    </div>
    <div class="form-group">
    <label for="prenom">Prénom</label>
        <input type="text" class="form-control" name= "prenom" placeholder="{{ app.user.client.prenom }}">
    </div>
    <div class="form-group">
    <label for="adresse">Adresse</label>
        <input type="text" class="form-control" name= "adresse" placeholder="{{ app.user.client.adresse }}">
    </div>
    <div class="form-group">
    <label for="cp">Code Postal</label>
        <input type="text" class="form-control" name= "cp" placeholder="{{ app.user.client.cp }}">
    </div>
    <div class="form-group">
    <label for="ville">Ville</label>
        <input type="text" class="form-control" name= "ville" placeholder="{{ app.user.client.ville }}">
    </div>
    <div class="form-group">
    <label for="tel">Téléphone</label>
        <input type="text" class="form-control" name= "tel" placeholder="{{ app.user.client.tel }}">
    </div>
    <div class="form-group">
    <label for="commandes">Historique des commandes</label>
    </div>


    <div class="accordion mb-5" id="accordionExample">

    {% for commande in commandes %}

  <div class="card mb-2">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          {{ commande.id }}
        </button>
      </h2>
    </div>   
{% for contient in commande.contients %}
     <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">
       <p>Titre du livre: {{ contient.lvrId.titre }}</p>
       <p>Auteur: {{ contient.lvrId.auteur }}</p>
       <p>Quantité: {{ contient.cmmdQte }}</p>
       <p>Date de commande: {{ commande.date|date("d/m/Y") }}</p>
      </div>
    </div>
     {% endfor %}
  </div>
   {% endfor %}
</div>
